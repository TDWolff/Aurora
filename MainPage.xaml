<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Aurora.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="10"
            Spacing="10">
            <Button
                Text="Scan for Devices"
                Clicked="OnScanButtonClicked"
                HorizontalOptions="Center"
                VerticalOptions="End" />
            <Frame
                BorderColor="Gray"
                CornerRadius="5"
                HasShadow="False"
                HeightRequest="200">
                <ScrollView>
                    <Label
                        x:Name="ChatBox"
                        Text=""
                        VerticalOptions="Start"
                        HorizontalOptions="FillAndExpand"
                        Padding="5" />
                </ScrollView>
            </Frame>

            <Entry
                x:Name="ChatInput"
                Placeholder="Type your message here..."
                HorizontalOptions="FillAndExpand"
                VerticalOptions="End" />

            <Frame
                BorderColor="Gray"
                CornerRadius="5"
                HasShadow="False"
                HeightRequest="200">
                <ScrollView>
                    <Label
                        x:Name="ConnectionsBox"
                        Text="Connections:"
                        VerticalOptions="Start"
                        HorizontalOptions="FillAndExpand"
                        Padding="5" />
                </ScrollView>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
