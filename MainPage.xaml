<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Aurora.MainPage"
             BackgroundColor="#0D0D0D">

    <Grid ColumnDefinitions="280,*">
        
        <!-- Sidebar -->
        <Border Grid.Column="0" 
                BackgroundColor="#1A1A1A"
                StrokeThickness="0"
                Padding="0">
            <VerticalStackLayout Spacing="0">
                
                <!-- New Chat Button -->
                <Button Text="+ New Chat"
                        BackgroundColor="#2A2A2A"
                        TextColor="White"
                        FontSize="14"
                        FontAttributes="Bold"
                        Margin="16,16,16,12"
                        HeightRequest="44"
                        CornerRadius="8"
                        Clicked="OnNewChatClicked" />
                
                <!-- Chat History List -->
                <ScrollView VerticalOptions="FillAndExpand">
                    <VerticalStackLayout Spacing="4" Padding="12,0">
                        
                        <!-- Sample Chat Items -->
                        <Border BackgroundColor="#2A2A2A"
                                StrokeThickness="0"
                                Padding="12"
                                Margin="0,0,0,4">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="6"/>
                            </Border.StrokeShape>
                            <Label Text="Previous conversation..."
                                   TextColor="#B0B0B0"
                                   FontSize="13"
                                   LineBreakMode="TailTruncation" />
                        </Border>
                        
                        <Border BackgroundColor="#2A2A2A"
                                StrokeThickness="0"
                                Padding="12"
                                Margin="0,0,0,4">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="6"/>
                            </Border.StrokeShape>
                            <Label Text="Another chat here..."
                                   TextColor="#B0B0B0"
                                   FontSize="13"
                                   LineBreakMode="TailTruncation" />
                        </Border>
                        
                        <Border BackgroundColor="#2A2A2A"
                                StrokeThickness="0"
                                Padding="12"
                                Margin="0,0,0,4">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="6"/>
                            </Border.StrokeShape>
                            <Label Text="Code generation task..."
                                   TextColor="#B0B0B0"
                                   FontSize="13"
                                   LineBreakMode="TailTruncation" />
                        </Border>
                        
                    </VerticalStackLayout>
                </ScrollView>
                
            </VerticalStackLayout>
        </Border>
        
        <!-- Main Chat Area -->
        <Grid Grid.Column="1" RowDefinitions="*,Auto">
            
            <!-- Chat Messages Area -->
            <ScrollView Grid.Row="0" Padding="24">
                <VerticalStackLayout Spacing="24">
                    
                    <!-- Welcome Message -->
                    <VerticalStackLayout Spacing="8" VerticalOptions="Center" HorizontalOptions="Center" Margin="0,100,0,0">
                        <Label Text="Aurora AI"
                               FontSize="32"
                               FontAttributes="Bold"
                               TextColor="White"
                               HorizontalOptions="Center" />
                        <Label Text="How can I help you today?"
                               FontSize="16"
                               TextColor="#808080"
                               HorizontalOptions="Center" />
                    </VerticalStackLayout>
                    
                    <!-- Sample Messages (these would be dynamically generated) -->
                    <HorizontalStackLayout Spacing="12">
                        <Border BackgroundColor="#3A3A3A"
                                WidthRequest="40"
                                HeightRequest="40"
                                StrokeThickness="0"
                                VerticalOptions="Start">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="20"/>
                            </Border.StrokeShape>
                            <Label Text="👤"
                                   FontSize="20"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                        </Border>
                        <Border BackgroundColor="#2A2A2A"
                                StrokeThickness="0"
                                Padding="16"
                                MaximumWidthRequest="600">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12"/>
                            </Border.StrokeShape>
                            <Label Text="This is where user messages will appear"
                                   TextColor="White"
                                   FontSize="14"
                                   LineBreakMode="WordWrap" />
                        </Border>
                    </HorizontalStackLayout>
                    
                    <HorizontalStackLayout Spacing="12">
                        <Border BackgroundColor="#4A4A4A"
                                WidthRequest="40"
                                HeightRequest="40"
                                StrokeThickness="0"
                                VerticalOptions="Start">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="20"/>
                            </Border.StrokeShape>
                            <Label Text="🤖"
                                   FontSize="20"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                        </Border>
                        <Border BackgroundColor="#2A2A2A"
                                StrokeThickness="0"
                                Padding="16"
                                MaximumWidthRequest="600">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12"/>
                            </Border.StrokeShape>
                            <Label Text="This is where AI responses will appear"
                                   TextColor="White"
                                   FontSize="14"
                                   LineBreakMode="WordWrap" />
                        </Border>
                    </HorizontalStackLayout>
                    
                </VerticalStackLayout>
            </ScrollView>
            
            <!-- Input Area -->
            <Border Grid.Row="1"
                    BackgroundColor="#1A1A1A"
                    StrokeThickness="0"
                    Padding="24,16,24,24">
                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                    
                    <!-- Text Input -->
                    <Border Grid.Column="0"
                            BackgroundColor="#2A2A2A"
                            StrokeThickness="1"
                            Stroke="#3A3A3A"
                            Padding="16,12">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12"/>
                        </Border.StrokeShape>
                        <Editor x:Name="MessageInput"
                                Placeholder="Send a message..."
                                PlaceholderColor="#606060"
                                TextColor="White"
                                BackgroundColor="Transparent"
                                FontSize="14"
                                HeightRequest="44"
                                MaximumHeightRequest="120"
                                AutoSize="TextChanges"
                                VerticalOptions="Center" />
                    </Border>
                    
                    <!-- Send Button -->
                    <Button Grid.Column="1"
                            Text="➤"
                            BackgroundColor="#4A90E2"
                            TextColor="White"
                            FontSize="20"
                            WidthRequest="56"
                            HeightRequest="56"
                            CornerRadius="28"
                            Clicked="OnSendClicked"
                            VerticalOptions="End" />
                    
                </Grid>
            </Border>
            
        </Grid>
        
    </Grid>

</ContentPage>